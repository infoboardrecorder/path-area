{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "CommonJS",
    "target": "ES2021",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/__tests__"],
  "typeRoots": ["src/@types", "node_modules/@types"]
}
